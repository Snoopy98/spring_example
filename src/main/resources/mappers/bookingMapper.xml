<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.example.booking.dao.BookingMapper">
 	<select id="selectBookingList" resultType="com.example.booking.domain.Booking">
 		SELECT
	 			`id`
				,`name`
				,`headcount`
				,`day`
				,`date`
				,`phoneNumber`
				,`state`
				,`createdAt`
				,`updatedAt`
		FROM
			`booking`				
 	</select>
 	
 	<delete id="deleteBookingList" parameterType="int">
 	DELETE
 	FROM
 		`booking`
 	WHERE
 		`id` = #{id}	
 	</delete>
 	
 	<insert id="insertBookingList" parameterType="map">
 	INSERT INTO `booking`
 		(
 				`name`
				,`headcount`
				,`day`
				,`date`
				,`phoneNumber`
				,`createdAt`
				,`updatedAt`
 		)
 	VALUES
 		(
 			#{name}
 			,#{headcount}
 			,#{day}
 			,#{date}
 			,#{phoneNumber}
 			,NOW()
 			,NOW()
 		)
 					
 				
 	</insert>
 	
 	<select id="selectBookingByNamePhoneNumber" parameterType="map" resultType="com.example.booking.domain.Booking">
 		SELECT
	 			`id`
				,`name`
				,`headcount`
				,`day`
				,`date`
				,`phoneNumber`
				,`state`
				,`createdAt`
				,`updatedAt`
		FROM
			`booking`	
		WHERE
			`name` = #{name} and `phoneNumber` = #{phoneNumber}		
 	</select>
 	
 	<select id="isBookingByNamePhoneNumber" parameterType="map">
 		SELECT
	 			`id`
				,`name`
				,`headcount`
				,`day`
				,`date`
				,`phoneNumber`
				,`state`
				,`createdAt`
				,`updatedAt`
		FROM
			`booking`	
		WHERE
			`name` = #{name} and `phoneNumber` = #{phoneNumber}		
 	</select>
 </mapper>